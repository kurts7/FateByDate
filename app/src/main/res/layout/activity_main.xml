<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgr_main"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fate2"
        android:id="@+id/find_your_goal_btn"
        android:textColor="#000000"
        android:textSize="25sp"
        android:focusableInTouchMode="false"
        android:enabled="true"
        android:clickable="true"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />

    <com.google.android.gms.ads.AdView android:id="@+id/adView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    ads:adUnitId="ca-app-pub-1177132318340542/8030378518"
    ads:adSize="SMART_BANNER"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text_first_one"
        android:textColor="#659DEB"
        android:textSize="28dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/mainText_first_one"
        android:layout_above="@+id/mainText_first_three"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text_first_two"
        android:textColor="#659DEB"
        android:textSize="28dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/mainText_first_two"
        android:layout_above="@+id/mainText_first_three"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text_first_three"
        android:textColor="#659DEB"
        android:textSize="28dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/mainText_first_three"
        android:layout_alignBaseline="@+id/find_your_goal_btn"
        android:layout_alignBottom="@+id/find_your_goal_btn"
        android:layout_alignLeft="@+id/find_your_goal_btn"
        android:layout_alignStart="@+id/find_your_goal_btn"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text_first_four"
        android:textColor="#659DEB"
        android:textSize="28dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/mainText_first_four"
        android:layout_alignBaseline="@+id/mainText_first_three"
        android:layout_alignBottom="@+id/mainText_first_three"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text_first_last"
        android:textColor="#659DEB"
        android:textSize="28dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/mainText_first_last"
        android:layout_alignBaseline="@+id/mainText_first_three"
        android:layout_alignBottom="@+id/mainText_first_three"
        android:layout_alignLeft="@+id/find_your_goal_btn"
        android:layout_alignStart="@+id/find_your_goal_btn" />

</RelativeLayout>
