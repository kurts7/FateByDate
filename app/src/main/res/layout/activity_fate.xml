<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/backgr_main"

    tools:context=".FateActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unknown_title"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="290dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageView"
            android:src="@drawable/question"
            android:paddingTop="0dp"
            android:paddingBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/your_card"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ScrollView
            android:orientation="vertical"
            android:id="@+id/scrollViewPlace"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/unknown"
                android:id="@+id/purposeText"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_above="@+id/textView"
                android:layout_centerHorizontal="true" />

        </ScrollView>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toChooseDate"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:enabled="true"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Login via VK"
            android:id="@+id/vk"
            android:layout_gravity="center_horizontal"
            android:background="@color/vk"
            android:layout_margin="8dp"
            android:textColor="#ffffffff" />
</LinearLayout>
</LinearLayout>